{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Component Manifest",
  "type": "object",
  "required": ["component", "data"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "component": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "description": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["prototype", "ready", "deprecated"]
    },
    "data": {
      "type": "object",
      "description": "Serializable content payload the component consumes.",
      "additionalProperties": true
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "path"],
        "properties": {
          "key": { "type": "string" },
          "path": { "type": "string" },
          "type": { "type": "string" },
          "usage": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "label"],
        "properties": {
          "key": { "type": "string" },
          "label": { "type": "string" },
          "href": { "type": "string" },
          "variant": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
